<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/ca981d34c3.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sassy+Frass&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3">
        <div class="container">
            <a href="#" class="navbar-brand">Jokr</a>
    
            <button class="navbar-toggler" type='button' data-bs-toggle='collapse' data-bs-target='#navmenu'>
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <div class="collapse navbar-collapse" id='navmenu'>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="/jokes/user" class="nav-link">View Your Jokes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

   <section class = 'compliment d-flex justify-content-between align-items-center'>
        <div class="container p-lg-3">
            <h1 class ='me-3'>Jokes</h1>
        </div>
    </section>
    
    <% let arr1 = []%>
    <% let arr2 =[]%>
    <% let arr3 =[]%>
    <% let arr4 =[]%>
    <% let count = 0%>
    <%for(let i = 0; i< jokes.length; i++){%>
        <%if(count === 0){%>
            <%arr1.push(jokes[i])%>
            <%count = 1%>
        <%} else if (count === 1){%>
            <%arr2.push(jokes[i])%>
            <%count = 2%>
        <%}else if(count ===2){%>
            <%arr3.push(jokes[i])%>
            <%count = 3%>   
        <%} else {%>
            <%arr4.push(jokes[i])%>
            <%count = 0%>
        <%}%>
    <%}%>

    <section class="bg-dark text-light p-5 text-center text-sm-start">
        <div class="container">
            <div class="row text-center">
                <% let col = [arr1, arr2, arr3, arr4]%>


                <%for(let j = 0; j<4; j++){%>
                    <div class="col-md w-25">
                    <% for(let i = 0; i<col[j].length; i++){%>
                        <div class="card border-dark text-dark mb-3" style="max-width: 18rem;">
                            <card class="body">
                                <% if(col[j][i].setup){%>
                                    <p class="card-title p-4"><%= col[j][i].setup%></p>
                                    <p class="card-text"><%= col[j][i].punchline %></p>
                                <%} else {%> 
                                    <p class="card-title p-4"><%= col[j][i].punchline%></p>
                                <%}%>
                            </card>
                            
                            <div class="card-footer mt-auto d-flex justify-content-around" >
                                <div data-id='<%=col[j][i]._id%>'>
                                    <span><%= col[j][i].likes%></span>
                                    <%if(col[j][i].likesArr.includes(loggedUser)){%>
                                        <span class='fa-solid fa-thumbs-up px-1 px-1 liked'></span>
                                    <%} else {%>
                                        <span class='fa-solid fa-thumbs-up like px-1 px-1'></span>
                                    <%}%>
                                    <span><%= col[j][i].dislikes%></span>

                                    <%if(col[j][i].dislikesArr.includes(loggedUser)){%>
                                        <span class='fa-solid fa-thumbs-down px-1 px-1 disliked'></span>
                                    <%} else {%>
                                        <span class='fa-solid fa-thumbs-down dislike px-1 px-1'></span>
                                    <%}%>

                                </div>
                                    <span >- <%=users.find((item)=> item.id === col[j][i].userId).userName%></span>
                                </div>
                        </div>
                    <%}%>
                    </div>
                <%}%>
            </div>
        </div>
    </section>



    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>