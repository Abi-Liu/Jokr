<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/ca981d34c3.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3">
        <div class="container">
            <a href="#" class="navbar-brand">Jokr</a>

            <button class="navbar-toggler" type = 'button' data-bs-toggle = 'collapse' data-bs-target = '#navmenu'>
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id = 'navmenu'>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="/jokes" class="nav-link">View All Jokes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class = 'compliment'>
        <div class="container">
            <h1 >Hey <%=user.userName%>!</h1>
            <% if(jokes.length === 0){%>
                <h4>You have no jokes yet. Create one below!</h4>
            <%} else { %>
                <h4>Here are your jokes</h4>
            <%}%>
        </div>
    </section>
    
    

<!-- Main -->
    <section class="bg-dark text-light p-5 text-center text-sm-start">
        <div class="container">
            <div class="row text-center">
                <% let temp = []; col = []; rows = Math.ceil(jokes.length/4)%>

                <%for(let i = 0; i< jokes.length; i+=rows){%>
                    <% temp = jokes.slice(i, i+rows)%>
                    <%col.push(temp)%>
                <%}%>

                <%for(let j = 0; j<col.length; j++){%>
                    <div class="col-md">
                    <% for(let i = 0; i<col[j].length; i++){%>
                        <div class="card border-success text-dark mb-3 h-50" style="max-width: 18rem;">
                            <card class="body">
                                <% if(col[j][i].setup){%>
                                    <p class="card-title pb-3"><%= col[j][i].setup%></p>
                                    <p class="card-text"><%= col[j][i].punchline %></p>
                                <%} else {%> 
                                    <p class="card-title pb-3"><%= col[j][i].punchline%></p>
                                <%}%>
                                
                            </card>
                            <div class="card-footer" data-id='<%=col[j][i]._id%>'>
                                <span><%= col[j][i].likes%></span>
                                <span class = 'fa-solid fa-thumbs-up  px-1 px-1'></span>
                                <span><%= col[j][i].dislikes%></span>
                                <span class='fa-solid fa-thumbs-down px-1'></span>
                                <span class = 'delete fa-solid fa-trash px-1'></span>
                            </div>
                        </div>
                    <%}%>
                    </div>
                <%}%>
            </div>
        </div>
    </section>
    

 

    <form action="/jokes/createJoke" method='POST'>
        <input type="text" placeholder="Setup" name='setup'>
        <input type="text" placeholder="Punchline" name='punchline'>
        <input type="submit">
    </form>


    <script src="../js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>